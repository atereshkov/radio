<Window x:Class="radio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="903" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <ListView x:Name="ListView1" HorizontalAlignment="Left" Height="299" Margin="0,250,0,0" VerticalAlignment="Top" Width="315">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30" DisplayMemberBinding="{Binding ID}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="ID">#</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Artist}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Artist">Artist</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="110" DisplayMemberBinding="{Binding Name}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Name">Title</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn Width="55" DisplayMemberBinding="{Binding Duration}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Duration">Duration</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="895">
            <MenuItem Header="File"/>
            <MenuItem Header="Collection"/>
            <MenuItem Header="Playlist"/>
            <MenuItem Header="Tools"/>
            <MenuItem Header="Help"/>
        </Menu>
        <StackPanel HorizontalAlignment="Left" Height="35" Margin="0,20,0,0" VerticalAlignment="Top" Width="897" Background="#FFE0E0E0"/>
        <StackPanel HorizontalAlignment="Left" Height="110" Margin="0,55,0,0" VerticalAlignment="Top" Width="446" Background="#FFD8E8FF"/>
        <Image HorizontalAlignment="Left" Height="48" Margin="148,96,0,0" VerticalAlignment="Top" Width="48" Cursor="Hand" Source="Images/icons/play_start.png"/>
        <Image HorizontalAlignment="Left" Height="48" Margin="95,96,0,0" VerticalAlignment="Top" Width="48" Cursor="Hand" Source="Images/icons/play_previous.png"/>
        <Image HorizontalAlignment="Left" Height="48" Margin="254,96,0,0" VerticalAlignment="Top" Width="48" Cursor="Hand" Source="Images/icons/play_next.png"/>
        <Image HorizontalAlignment="Left" Height="48" Margin="201,96,0,0" VerticalAlignment="Top" Width="48" Cursor="Hand" Source="Images/icons/play_stop.png"/>
        <Label Content="Listeners:" HorizontalAlignment="Left" Margin="766,25,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="95,28,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Current song..." HorizontalAlignment="Left" Margin="95,60,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.554,0.442"/>
        <Image HorizontalAlignment="Left" Height="75" Margin="10,76,0,0" VerticalAlignment="Top" Width="75" Source="Images/icons/no_poster.png"/>

    </Grid>
</Window>
